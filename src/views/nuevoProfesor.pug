extends ./index

block contenido
    .py-10
        h1.text-4xl.my-10.font-extrabold.text-center Mi proyectín
            span.font-normal Universidad Universal
        h2.text-center.text-2xl.font-extrabold= pagina

        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form.space-y-5(method='POST' action='/profesores' noValidate)
                  
                    
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="dni") D.N.I.
                        input#dni.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="D.N.I." type="text" name="dni" value=profesor? profesor.dni : '')

                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="nombre") Nombre
                        input#nombre.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Nombre" type="text" name="nombre" value=profesor? profesor.nombre : '')
                    
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="apellido") Apellido
                        input#apellido.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Apellido" type="text" name="apellido" value=profesor? profesor.apellido : '')
                    
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="correo") Correo
                        input#correo.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Correo" type="correo" name="correo" value=profesor? profesor.correo : '')
                    
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="rubro") Rubro
                        input#rubro.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Rubro" type="text" name="rubro" value=profesor? profesor.rubro  : '')


                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="numtel") Teléfono 
                        input#numtel.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Teléfono" type="text" name="numtel" value=profesor? profesor.numtel  : '')    
                    
                    input(class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer" type="submit" value="Registrar Profesor")