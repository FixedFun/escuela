extends ./index

block contenido
    .py-10
        h1.text-4xl.my-10.font-extrabold.text-center Inscribir

        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form.space-y-5(method='POST' action='/Inscripto/creaInscripciones' noValidate)
                
                 
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="idAlumno") Alumno
                        select#idAlumno.w-full.px-3.py-2.border.border-gray-300.rounded-md(name="idAlumno" required)
                            option(value='') Elija un alumno
                                if alumnos && alumnos.length
                                    each alumno in alumnos
                                        option(value=alumno.id)= alumno.nombre

                    
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="idCurso") Curso
                        select#idCurso.w-full.px-3.py-2.border.border-gray-300.rounded-md(name="idCurso" required)
                            option(value='') Elija un curso
                                if alumnos && alumnos.length
                                    each curso in cursos
                                        option(value=curso.id)= curso.nombre

                 
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="calificacion") Nota
                        input#calificacion.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Calificaci√≥n" type="number" name="calificacion" step="0.01" min="0" max="10" required)

                    .flex.items-center.justify-between
                        button(type="submit" class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer") Inscribir
